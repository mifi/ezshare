{
  "name": "ezshare",
  "version": "1.12.0",
  "description": "Easily share and receive files over a local network",
  "main": "dist/index.js",
  "repository": "https://github.com/mifi/ezshare",
  "author": "Mikael Finstad <finstaden@gmail.com>",
  "license": "MIT",
  "engines": {
    "node": ">=18"
  },
  "workspaces": [
    "packages/*"
  ],
  "type": "module",
  "bin": "dist/index.js",
  "scripts": {
    "test": "exit 0",
    "lint": "eslint .",
    "build": "yarn workspaces foreach -Apt run build",
    "clean": "git clean -Xfd packages -e '!node_modules' -e '!**/node_modules/**/*'",
    "dev:cli": "yarn build && yarn workspaces foreach -Rpi --from @ezshare/cli run dev",
    "dev:electron": "yarn build && yarn workspaces foreach -Rp -i --from @ezshare/electron run dev"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "concurrently": "^5.1.0",
    "eslint": "^8.2.0",
    "eslint-config-mifi": "^0.0.6",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "eslint-plugin-unicorn": "^51.0.1",
    "typescript": "^5.6.3"
  },
  "packageManager": "yarn@4.9.4"
}
